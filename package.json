{
  "name": "allscreen",
  "displayName": "AllScreen",
  "description": "VS Code extension for responsive web development with synchronized viewports",
  "version": "0.0.1",
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:allscreen.openResponsivePreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "allscreen.openResponsivePreview",
        "title": "AllScreen: Open Responsive Preview"
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "watch": "tsc -b -w",
    "lint": "eslint .",
    "test": "jest",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.4",
    "@vitejs/plugin-react": "^4.4.1",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^8.1.0",
    "jest": "^29.7.0",
    "mocha": "^10.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vscode-test": "^1.6.1"
  }
}
